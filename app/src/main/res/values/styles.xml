<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Drawer">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlueButton">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:textStyle">bold</item>
         
    </style>

    <style name="BlueButtonWide" parent="BlueButton">
        <item name="android:layout_width">@dimen/button_wide_width</item>
         
    </style>

    <style name="BlueButtonSmall" parent="BlueButton">
        <item name="android:layout_width">@dimen/button_small_width</item>
        <item name="android:paddingTop">@dimen/button_small_padding</item>
        <item name="android:paddingBottom">@dimen/button_small_padding</item>
        <item name="android:textSize">@dimen/button_small_text_size</item>
         
    </style>

    <style name="BlueButtonWrap" parent="BlueButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/button_padding</item>
        <item name="android:paddingRight">@dimen/button_padding</item>
    </style>

    <style name="BlueButtonWrapWide" parent="BlueButtonWrap">
        <item name="android:paddingLeft">@dimen/button_wide_padding</item>
        <item name="android:paddingRight">@dimen/button_wide_padding</item>
    </style>

    <!-- NEW RESULTS SCREEN -->

    <style name="Results_SummaryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/results_text_extra_large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Results_SummaryExplanation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/results_text_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Results_StudyInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/results_text_small</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="Results_TableItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Results_TableTitle" parent="Results_TableItem">
        <item name="android:paddingTop">20dp</item>
        <item name="android:textSize">@dimen/results_text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Results_ColumnTitle" parent="Results_TableItem">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textSize">@dimen/results_text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Results_ColumnTitleWhite" parent="Results_ColumnTitle">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="Results_RowLabel" parent="Results_TableItem">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/results_text_medium</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="Results_RowLabelWhite" parent="Results_RowLabel">
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="Results_RowValue" parent="Results_TableItem">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/results_text_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Results_RowValueWhite" parent="Results_RowValue">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="Results_Button" parent="BlueButton">
        <item name="android:layout_width">175dp</item>
        <item name="android:textSize">@dimen/results_text_medium</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="SeekArc">
        <item name="arcColor">@color/progress_gray_dark</item>
    </style>

    <style name="SeekArcLight">
        <item name="arcColor">@color/progress_gray</item>
    </style>

</resources>
